{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "./src", // Changed from "." to "./src"
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"], // Changed to only include src
  "exclude": ["node_modules", "dist"]
}
